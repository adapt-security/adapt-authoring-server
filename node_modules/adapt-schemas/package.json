{
  "name": "adapt-schemas",
  "repository": {
    "type": "git",
    "url": "https://github.com/cgkineo/adapt-schemas"
  },
  "version": "1.1.0",
  "description": "Standalone JSON Schema library for the Adapt framework",
  "type": "module",
  "main": "index.js",
  "exports": {
    ".": "./index.js",
    "./Schemas": "./lib/Schemas.js",
    "./Schema": "./lib/Schema.js",
    "./SchemaError": "./lib/SchemaError.js",
    "./Keywords": "./lib/Keywords.js",
    "./XSSDefaults": "./lib/XSSDefaults.js"
  },
  "scripts": {
    "test": "node test.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "keywords": [
    "adapt",
    "json-schema",
    "schema",
    "validation"
  ],
  "license": "MIT",
  "dependencies": {
    "ajv": "^8.12.0",
    "bytes": "^3.1.2",
    "glob": "^10.0.0",
    "lodash": "^4.17.21",
    "ms": "^2.1.3",
    "safe-regex": "^2.1.1",
    "xss": "^1.0.14"
  },
  "devDependencies": {
    "@semantic-release/git": "^10.0.1",
    "conventional-changelog-eslint": "^6.0.0",
    "semantic-release": "^25.0.3",
    "@eslint/eslintrc": "^3.1.0",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.6.0",
    "eslint-plugin-promise": "^6.6.0"
  },
  "release": {
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "eslint"
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "eslint"
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ]
  }
}
